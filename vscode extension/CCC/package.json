{
  "name": "code-commenting-convention",
  "displayName": "Code Commenting Convention",
  "description": "A lightweight extension that helps developers write clear, consistent, and structured code comments following the Code Commenting Convention (CCC) standard.",
  "version": "1.0.3",
  "author": "Chrisiisx",
  "publisher": "Chrisiisx",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chrisiisx/Code-Commenting-Convention" 
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CCC.author",
        "title": "CCC Author"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
